<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>
	<managed-bean>
		<description>
		Backing bean for devices.jsp</description>
		<managed-bean-name>
		listdevices_backing</managed-bean-name>
		<managed-bean-class>
		au.net.ohalloran.backing.ListDevices</managed-bean-class>
		<managed-bean-scope>
		request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>
		delete this</description>
		<managed-bean-name>
		testBean_backing</managed-bean-name>
		<managed-bean-class>
		au.net.ohalloran.backing.TestBean</managed-bean-class>
		<managed-bean-scope>
		request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>
		Backing bean for adddevice.jsp page</description>
		<managed-bean-name>
		addDevice_backing</managed-bean-name>
		<managed-bean-class>
		au.net.ohalloran.backing.AddDevice</managed-bean-class>
		<managed-bean-scope>
		request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>
		session bean for getting location information</description>
		<managed-bean-name>
		locations</managed-bean-name>
		<managed-bean-class>
		au.net.ohalloran.model.Locations</managed-bean-class>
		<managed-bean-scope>
		session</managed-bean-scope>
		<map-entries>
			<map-entry>
				<key>
				porch</key>
				<value>
				Porch</value>
			</map-entry>
			<map-entry>
				<key>
				lounge</key>
				<value>
				Lounge Room</value>
			</map-entry>
		</map-entries>
	</managed-bean>
	<managed-bean>
		<description>
		session device types bean</description>
		<managed-bean-name>
		deviceTypes</managed-bean-name>
		<managed-bean-class>
		au.net.ohalloran.model.DeviceTypes</managed-bean-class>
		<managed-bean-scope>
		session</managed-bean-scope>
		<map-entries>
			<map-entry>
				<key>
				deskLamp</key>
				<value>
				Desk Lamp</value>
			</map-entry>
			<map-entry>
				<key>
				motionSensor</key>
				<value>
				Motion Sensor</value>
			</map-entry>
		</map-entries>
	</managed-bean>
	<navigation-rule>
		<display-name>
		login</display-name>
		<from-view-id>
		/login.jsp</from-view-id>
		<navigation-case>
			<from-outcome>
			login</from-outcome>
			<to-view-id>
			/listdevices.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>
		adddevice</display-name>
		<from-view-id>
		/adddevice.jsp</from-view-id>
		<navigation-case>
			<from-outcome>
			deviceconfirm</from-outcome>
			<to-view-id>
			/adddeviceconfirm.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>
		adddeviceconfirm</display-name>
		<from-view-id>
		/adddeviceconfirm.jsp</from-view-id>
		<navigation-case>
			<from-outcome>
			revise</from-outcome>
			<to-view-id>
			/adddevice.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>
		adddeviceconfirm</display-name>
		<from-view-id>
		/adddeviceconfirm.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>
			/listdevices.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
